  <div class="content-container">
    <%= form_for [category, artist], html: { multipart: true } do |f| %>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :body %>
              <%= f.text_area :body, class: 'form-control', rows: 20 %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :main_image %>
              <%= f.file_field :main_image %>
            </div>
            <div class="form-group">
              <%= f.label :image_2 %>
              <%= f.file_field :image_2 %>
            </div>
            <div class="form-group">
              <%= f.label :image_3 %>
              <%= f.file_field :image_3 %>
            </div>
            <div class="form-group">
              <%= f.submit "Save", class: 'btn btn-success' %>
              <a href="javascript:history.back()", class="btn btn-success">Cancel</a>
            </div>
          </div>
    <% end %>
  </div>
</div>
