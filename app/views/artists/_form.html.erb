<%= form_for [category, artist] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.label :main_image %>
    <%= f.file_field :main_image %>
  </div>
  <div class="form-group">
    <%= f.label :image_2 %>
    <%= f.file_field :image_2 %>
  </div>
  <div class="form-group">
    <%= f.label :image_3 %>
    <%= f.file_field :image_3 %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>