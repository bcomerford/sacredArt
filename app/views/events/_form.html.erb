<div class="row">
  <%= render partial: 'faqs/markdown' %>

  <div class="col-sm-6">
    <div class="content-container">
      <%= form_for @event do |f| %>
          <div class="form-group">
            <%= f.label :title%>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :date %>
            <%= f.date_field :date, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 12, col: 40, class: 'form-control' %>
          </div>
          <div class="">
            <%= f.submit "Save Event", class: 'btn btn-success'%>
            <%= link_to "Cancel", events_path, class: 'btn btn-success' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
