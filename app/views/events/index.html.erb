<h2>All Events, past and present</h2>
<%= link_to "Add Event", new_event_path, :class => 'btn btn-success' %>

<% @events.each do |event| %>
  <div class="content-container">
    <h2><%= event.title %></h2>
    <h3><%= event.date.to_formatted_s(:long) %></h3>
    <p><%= markdown(event.body) %></p>
    <%= link_to "Edit Event", edit_event_path(event.id), class: 'btn btn-success'  %>
    <%= link_to "Delete Event", event, method: :delete, :class => 'btn btn-success' %>
  </div>
<% end %>
