<div class="row">
  <%= render partial: 'faqs/markdown' %>

  <div class="col-sm-6">
    <div class="content-container ">
      <%= form_for @faq do |f| %>
          <div class="form-group">
            <%= f.label :question %>
            <%= f.text_field :question, class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :answer %>
            <%= f.text_area :answer, rows: 15, class: "form-control"  %>
          </div>
          <div class="">
            <%= f.submit "Save FAQ", class: 'btn btn-success' %>
            <%= link_to "Cancel", faqs_path, class: 'btn btn-success' %>
          </div>
      <% end %>
    </div>
  </div>
</div>