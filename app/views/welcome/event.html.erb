        flex-direction: column;
        padding: 15px;
    }
    h2, p {
        color: #FFFFFF;
    }
    .btn-secondary {
        background-color: #FFFFFF;
        color: #000000;
    }
  </style>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
